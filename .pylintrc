; This file is used to configure pylint. It is opionated, and customized to my liking.

[MASTER]

ignore=tests

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring

[FORMAT]

max-line-length=100

[STRING]

check-quote-consistency=true

[REFACTORING]

max-nested-blocks=2

[DESIGN]

max-statements=15